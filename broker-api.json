  "basePath": "/v2/broker",
  "host": "api.us2.kimonocloud.com",
  "schemes": [
    "https"
  ],
  "securityDefinitions": { 
    "Actor": {
      "type": "oauth2",
      "flow": "application",
      "authorizationUrl": "https://api.us2.kimonocloud.com/oauth/token",
      "tokenUrl": "https://api.us2.kimonocloud.com/oauth/token"
    }
  },
  "security": [
    { "Actor": [ ] }
  ],  
